{% extends 'base.html.twig' %}

{% block style %}

    .anuncio {
        text-align: center;
        background-color: coral; /* Color de fondo coral */
        border-radius: 15px; /* Bordes redondeados */
        padding: 20px; /* Espaciado dentro del div */
    }

    .dropdown-toggle {
        font-size: 2rem; /* Aumenta el tamaño del texto del botón */
        padding: 20px 40px; /* Aumenta el tamaño del botón */
    }

    .dropdown-menu {
        font-size: 1.75rem; /* Aumenta el tamaño del texto del menú */
        padding: 10px 20px; /* Aumenta el padding dentro de las opciones */
    }

    .dropdown-item {
        padding: 15px 30px; /* Aumenta el padding dentro de cada opción */
    }

{% endblock %}

{% block body %}
    
    <div id="carouselPresentacion" class="carousel slide" data-ride="carousel">
        <!-- Indicadores circulares -->
        <ol class="carousel-indicators">
            <li data-target="#carouselPresentacion" data-slide-to="0" class="active"></li>
            <li data-target="#carouselPresentacion" data-slide-to="1"></li>
            <li data-target="#carouselPresentacion" data-slide-to="2"></li>
            <li data-target="#carouselPresentacion" data-slide-to="3"></li>
        </ol>

        <!-- Fotos del carousel -->
        <div class="carousel-inner">
            <div class="item active">
            
            <img src="{{ asset('images/Maquinas.jpg') }}" alt="Ejercicios en maquinas">
            </div>

            <div class="item">
            <img src="{{ asset('images/Mancuernas.jpg') }}" alt="Ejercicios de mancuernas">
            </div>

            <div class="item">
            <img src="{{ asset('images/Clases.jpg') }}" alt="Clases de zumba">
            </div>

            <div class="item">
            <img src="{{ asset('images/Personal.jpg') }}" alt="Entrenamiento Personal">
            </div>
        </div>

        <!-- Controles -->
        <a class="left carousel-control" href="#carouselPresentacion" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#carouselPresentacion" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <br>
    <br>

    <div class="dropdown">
        <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Servicios que ofrecemos
        <span class="caret"></span></button>
        <ul class="dropdown-menu">
            {% for servicio in servicios %}
                <li><a href="#">{{ servicio.nombre }}</a></li>
            {% endfor %}
        </ul>
    </div>

    <br>
    <br>

    <div class="anuncio">
        <h2 class="display-3">¡Promoción!</h2>
